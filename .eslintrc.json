{
  "extends": ["next"],
  "plugins": ["perfectionist"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",

    // Removed `sort-array-includes` because its options are no longer compatible
    // "perfectionist/sort-array-includes": ["warn", {...}],

    "perfectionist/sort-classes": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "groups": [
          "index-signature",
          "static-property",
          "private-property",
          "property",
          "constructor",
          "static-method",
          "private-method",
          "static-private-method",
          "method",
          ["get-method", "set-method"],
          "unknown"
        ]
      }
    ],

    "perfectionist/sort-enums": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "partition-by-comment": false
      }
    ],

    "perfectionist/sort-exports": [
      "warn",
      {
        "type": "natural",
        "order": "asc"
      }
    ],

    "perfectionist/sort-imports": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "groups": [
          "type",
          "react",
          ["builtin", "external"],
          "internal-type",
          "internal",
          ["parent-type", "sibling-type", "index-type"],
          ["parent", "sibling", "index"],
          "object",
          "unknown",
          "style"
        ],
        "custom-groups": {
          "value": {
            "react": ["react", "react-*"]
          },
          "type": {
            "react": "react"
          }
        },
        "internal-pattern": ["@/**"],
        "newlines-between": "always"
      }
    ],

    "perfectionist/sort-interfaces": [
      "warn",
      {
        "type": "natural",
        "optionality-order": "required-first",
        "order": "asc",
        "groups": ["shorthand", "flag", "unknown", "callback", "multiline"],
        "custom-groups": {
          "callback": ["(on|open|close|cancel|set|render)[A-Z]*", "+([a-z])tion"],
          "flag": ["is[A-Z_]*", "+([a-z])ed", "success"]
        },
        "partition-by-new-line": false
      }
    ],

    "perfectionist/sort-jsx-props": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "groups": ["shorthand", "flag", "unknown", "callback", "multiline"],
        "custom-groups": {
          "callback": ["(on|open|close|cancel|set|render)[A-Z]*", "+([a-z])tion"],
          "flag": ["is[A-Z_]*", "+([a-z])ed", "success"]
        }
      }
    ],

    "perfectionist/sort-maps": [
      "warn",
      {
        "type": "natural",
        "order": "asc"
      }
    ],

    "perfectionist/sort-named-exports": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "group-kind": "types-first"
      }
    ],

    "perfectionist/sort-named-imports": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "group-kind": "types-first",
        "ignore-alias": false
      }
    ],

    "perfectionist/sort-object-types": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "groups": ["flag", "unknown", "callback", "multiline"],
        "custom-groups": {
          "callback": ["(on|open|close|cancel|set|render)[A-Z]*", "+([a-z])tion"],
          "flag": ["is[A-Z_]*", "+([a-z])ed", "success"]
        },
        "partition-by-new-line": false
      }
    ],

    "perfectionist/sort-objects": [
      "warn",
      {
        "type": "natural",
        "order": "asc",
        "groups": ["flag", "unknown", "callback", "multiline"],
        "custom-groups": {
          "callback": ["(on|open|close|cancel|set|render)[A-Z]*"*]()
